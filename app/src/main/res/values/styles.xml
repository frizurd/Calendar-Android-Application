<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ff1744</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ff616f</item>
    </style>

    <style name="FirstLetterCalendarDays" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#b0b0b0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@android:color/holo_purple</item>
        <item name="colorControlActivated">@android:color/holo_green_dark</item>
        <item name="textColorAlertDialogListItem">@android:color/holo_red_dark</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>
